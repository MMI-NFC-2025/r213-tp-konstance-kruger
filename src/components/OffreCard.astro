---

const offre  = Astro.props.offre;
console.log(offre);
import PbImage from "../pages/PbImage.astro";
---

<div 
  class={[
    "bg-white rounded-lg shadow-md p-6",
    offre.favori ? "border-l-4 border-white-400" : "border-l-4 border-gray-200"
  ].join(" ")}
  data-id={offre.id}
  data-favori={offre.toString()}
>
<PbImage record={offre} recordImage={offre.images[0]} />
  <h3 class="text-lg font-semibold text-gray-900 mb-3">{offre.nom_maison}</h3>
  <button 
    class="btn-favori bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md font-medium text-sm" 
    data-id={offre.id}
  >
    {offre.favori ? 'Favori' : 'Ajouter'}
  </button>
</div>

